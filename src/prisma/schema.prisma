// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  address   String?
  phone     String?
  active    Boolean   @default(true)
  role      Role      @default(USER)
  bookings  Booking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Report    Report[]
}

model Service {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Float
  available   Boolean // عدد المقاعد / المواعيد المتاحة
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Booking {
  id        Int           @id @default(autoincrement())
  user      User          @relation(fields: [userId], references: [id])
  userId    Int
  service   Service       @relation(fields: [serviceId], references: [id])
  serviceId Int
  status    BookingStatus @default(PENDING)
  payment   Payment?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  Report    Report[]
}

model Payment {
  id        Int           @id @default(autoincrement())
  booking   Booking       @relation(fields: [bookingId], references: [id])
  bookingId Int           @unique
  amount    Float
  status    PaymentStatus
  stripeSessionId String?      @unique
  createdAt DateTime      @default(now())
}

model Report {
  id        Int          @id @default(autoincrement())
  title     String
  content   String
  user      User         @relation(fields: [userId], references: [id])
  userId    Int
  booking   Booking?     @relation(fields: [bookingId], references: [id])
  bookingId Int?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  status    ReportStatus @default(PENDING)
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
}
enum Role {
  USER
  ADMIN
}

enum BookingStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
